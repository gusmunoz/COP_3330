#include <iostream>


using namespace std;

class Triangle
{

        public:            
		Triangle(int size, char border='#', char fill='*');		//constructor
				
		// accessors
		int GetSize();
		
		
		int Perimeter();
		double Area();
		
		void Grow();
		void Shrink();
		
		void SetBorder(char border);
		void SetFill(char fill);
		
		void Draw();
		
		void Summary();
		
                
	private:
		int sideLength;
		char borderChar;
		char fillChar;
};































